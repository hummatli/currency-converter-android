<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/blueRibbon800</item>
        <item name="colorPrimaryDark">@color/blueRibbon800</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColorMain">@color/black</item>
        <item name="textColorContrasting">@color/white</item>
        <item name="textColorError">@color/pomegranate</item>
        <item name="textColor_2">#b3000000</item>
        <item name="textColor_3">@color/mirage700</item>
        <item name="textColor_4">@color/lightAsh</item>
        <item name="textColor_5">#CC171D24</item>
        <item name="textColor_6">#343836</item>

        <item name="dotColor">@color/white</item>
        <item name="dotColorSelected">@color/sunglow800</item>

        <item name="backgroundClickableCommon">@drawable/bg_clickable_common</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="buttonBig">@style/Button.Big.Black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="N">false</item>
        <item name="bottomSheetDialogTheme">@style/SheetDialog</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="TextView">
        <item name="android:textAppearance">@style/Body_1</item>
        <item name="android:textColor">?textColorMain</item>
    </style>

    <style name="Button.Big">
        <item name="android:padding">20dp</item>
        <item name="android:textAppearance">@style/Button</item>
    </style>

    <style name="Button.Big.Black">
        <item name="android:background">@drawable/bg_clickable_big_black_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Big.White">
        <item name="android:background">@drawable/bg_clickable_big_white_button</item>
        <item name="android:textColor">@color/mirage700</item>
    </style>

    <style name="Button.Flat.Big">
        <item name="android:padding">20dp</item>
        <item name="android:textAppearance">@style/Button</item>
    </style>

    <style name="Button.Flat.Big.Black">
        <item name="android:background">@drawable/bg_clickable_big_black_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Flat.Big.White">
        <item name="android:background">@drawable/bg_clickable_big_white_button</item>
        <item name="android:textColor">@color/mirage700</item>
    </style>

    <style name="Button.SecondaryAction">
        <item name="android:background">@drawable/bg_clickable_secondary_button</item>
        <item name="android:padding">@dimen/offset</item>
        <item name="android:textColor">@color/blueRibbon</item>
        <item name="android:textAppearance">@style/Button</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_clickable_secondary_button</item>
        <item name="android:padding">@dimen/offset</item>
        <item name="android:textColor">@color/mirage400</item>
        <item name="android:textAppearance">@style/Button</item>
    </style>

    <style name="Button.Flat">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAppearance">@style/Button</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button.Flat.Dialog">
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Button.Flat.Dialog.Secondary">
        <item name="android:background">@drawable/bg_clickable_secondary_button</item>
        <item name="android:textColor">@color/mirage400</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/ash</item>
        <item name="android:textAppearance">@style/Caption</item>
        <item name="boxStrokeErrorColor">?textColorError</item>
        <item name="errorTextColor">?textColorError</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textAppearance">@style/Body_1</item>
        <item name="android:textColor">?textColor_3</item>
    </style>

    <style name="Otp" parent="PinWidget.PinView">
        <item name="android:textAppearance">@style/Headline_4</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/ash</item>
        <item name="hideLineWhenFilled">false</item>
        <item name="itemCount">6</item>
        <item name="itemWidth">44dp</item>
        <item name="itemHeight">56dp</item>
        <item name="itemRadius">4dp</item>
        <item name="itemSpacing">12dp</item>
        <item name="lineWidth">1dp</item>
        <item name="viewType">rectangle</item>
    </style>

    <style name="ToolbarText" parent="Headline_6">
        <item name="android:textColor">?textColorContrasting</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="BigDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_round_rect</item>
    </style>

    <style name="HorizontalProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_progress</item>
        <item name="minHeight">10dp</item>
        <item name="maxHeight">10dp</item>
    </style>

</resources>